<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="5dp"
        card_view:contentPadding="5dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardMaxElevation="5dp">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_200">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/VolleyImageView"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/IID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check"
                android:visibility="gone" />

            <TextView
                android:id="@+id/ImageNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/VolleyImageView"
                android:layout_toRightOf="@+id/VolleyImageView"
                android:text="JSon Image Name"
                android:textColor="@color/teal_200"
                android:textSize="20dp" />



            <TextView
                android:id="@+id/Imagetype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ImageNameTextView"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/VolleyImageView"
                android:text="JSon type"
                android:textColor="@color/teal_200"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/Imagesize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Imagetype"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/VolleyImageView"
                android:text="JSon size"
                android:textColor="@color/teal_200"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/Imagepack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Imagesize"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/VolleyImageView"
                android:text="JSon pack"
                android:textColor="@color/teal_200"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/Imageprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Imagepack"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/VolleyImageView"
                android:text="JSon prize"
                android:textColor="@color/teal_200"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/adct"
                android:layout_width="150px"
                android:layout_height="150px"
                android:layout_marginStart="86dp"
                android:layout_marginLeft="86dp"
                android:layout_alignBottom="@id/Imageprice"
                android:layout_toEndOf="@+id/Imageprice"
                android:layout_toRightOf="@+id/Imageprice"
                 />

        </RelativeLayout>

</androidx.cardview.widget.CardView>
